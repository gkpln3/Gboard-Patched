<?xml version="1.0" encoding="utf-8"?>
<framework>
    <ime announce_auto_selected_candidate="true" auto_capital="false" class="com.google.android.apps.inputmethod.libs.latinguyk5.LatinIme" display_app_completions="true" language="fa" string_id="ime_persian">
        <if enable_number_row="false">
            <keyboard_group variant="persian" variant_label="@string/variant_persian">
                <keyboard def="@xml/keyboard_fa" type="prime" />
                <include href="@xml/keyboards_non_prime_latin" />
            </keyboard_group>
        </if>
        <else>
            <keyboard_group layout_theme="@style/KeyboardLayoutTheme.WithNumberRow" variant="persian" variant_label="@string/variant_persian">
                <keyboard def="@xml/keyboard_fa" type="prime">
                    <merge def="@xml/keyboard_latin_fragment_numbers_10_11_11_11_no_shift" />
                </keyboard>
                <include href="@xml/keyboards_non_prime_latin" />
            </keyboard_group>
        </else>
    </ime>
</framework>